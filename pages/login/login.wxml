<!--pages/login/login.wxml-->
<view class="content">
	<view class="account">
		<view class="title">账号:</view>
		<view class="num">
			<input bindinput="accountInput" placeholder="手机号" placeholder-style="color:#999999;"/>
		</view>
	</view>
	<view class="hr">
	</view>
	<view class="account">
		<view class="title">密码:</view>
		<view class="num">
			<input bindblur="pwdBlur"placeholder="请输入密码" password placeholder-style="color:#999999;"/>
		</view>
		<view class="see">
			<image src="/resource/images/password.png" style="width:16px;height:16px;"></image>
		</view>
	</view>
	<view class="hr">

	</view>
	<button class="btn" disabled="{{disabled}}" type="{{btnstate}}" bindtap="login">登录</button>
		<view class="operate">
			<view>
				<navigator url="/pages/mobile/mobile">手机快速注册</navigator>
			</view>
		</view>
		<view class="login">
			<view>
				<image src="/resource/images/weixin.png" style="width:48px;height:48px;">
				</image>
			</view>
			<view>
				<image src="/resource/images/QQ.png" style="width:48px;height:48px;">
				</image>
			</view>
		</view>

	
</view>
