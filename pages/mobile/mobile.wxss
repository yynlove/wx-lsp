/* pages/login/mobile/mobile.wxss */
.content{ 
  width: 100%; 
  height: 600px; 
  background-color:#f2f2f2; 
} 
.hr{ 
  padding-top: 20px; 
} 

.item{ 
  margin: 0 auto;
  border: 1px solid #cccccc;
  height: 40px; 
  width: 90%; 
  border-radius: 3px; 
  background-color: #ffffff; 
  margin-bottom: 15px; 
}
.item input{ 
  height: 40px; 
  line-height: 40px; 
  margin-left: 10px; 
}
 
.holder{ 
  font-size: 14px;
  color:#999999; 
}


.mobileInfo{ 
  display:flex; 
  flex-direction:row; 
} 


.mobile{ 
  margin: 0 auto; 
  border: 1px solid #cccccc; 
  height: 40px; 
  width: 50%; 
  border-radius: 3px;
  background-color: #ffffff;
  margin-bottom: 15px; 
  display:flex; 
  flex-direction:row; 
  margin-left: 5%; 
}
.mobilepref{ 
  margin-left: 20px; 
  margin-top: 10px; 
}


.mobile input{ 
  margin-top: 8px; 
  margin-left: 10px; 
}

.code{ 
  border: 1px solid #cccccc; 
  height: 40px; 
  width: 35%; 
  background-color: #EFEEEC; 
  border-radius: 3px; 
  text-align:center; 
  margin-left: 10px; 
  line-height: 40px; 
  color: #999999; 
  font-size: 15px; 
  margin-bottom: 15px; 
  margin-right: 5%;
}


.numbg{ 
  border: 1px solid #cccccc;
  width: 90%;
  margin: 0 auto; 
  background-color:#ffffff; 
  border-radius: 5px; 
  display:flex; 
  flex-direction:row; 
  height: 50px; 
} 


.btn{ 
  width: 90%; 
  margin-top:30px; 
  color: #999999; 
}
